                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Categories" asp-action="Index">Category</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-dark" asp-area="" asp-controller="Logins" asp-action="Index">Login</a>
                </li>
                <li class="nav-item">
